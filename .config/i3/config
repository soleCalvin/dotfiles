# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1

# enable gaps
for_window [class="^.*"] border pixel 2
gaps inner 10
gaps outer 9

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return split h exec st -cd
bindsym $mod+Shift+Return split v exec st

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run

# split vertically
bindsym $mod+v split horizontal exec ~/.scripts/start_gvim.sh
bindsym $mod+Shift+v split vertical exec ~/.scripts/start_gvim.sh
default_orientation horizontal

# Don't follow mouse focus
focus_follows_mouse no

# define directional keys
set $up k
set $down j
set $left h
set $right l

# change focus
bindsym $mod+$up focus up
bindsym $mod+$down focus down
bindsym $mod+$left focus left
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$right move right

# Enter fullscreen
bindsym $mod+f fullscreen toggle

# Restart in place
bindsym $mod+Shift+r restart

# Background Image
exec_always feh --randomize --bg-scale /mnt/c/Users/Calvin/Documents/Desktop\ Wallpapers/*

# Window       border  backgr. text    indicator child_border
client.focused #268bd2 #268bd2 #ffffff #268bd2   #268bd2

# Tasks to run
exec --no-startup-id compton --config ~/.config/compton/compton.conf

